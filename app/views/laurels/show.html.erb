<% if signed_in? && current_user.sca_name == @laurel.sca_name %>
  <%= link_to('Edit Profile', '/users/edit') %>
<% end %>
<h1><%=@laurel.sca_name%> <small><%=@laurel.show_specialties%></h1>
<%= image_tag @laurel.profile_pic.url(:large) %>
<%= image_tag @laurel.arms.url(:large) %>
<strong>Modern Name:</strong> <%=@laurel.modern_name%><br>
<strong>Specialties:</strong><%=@laurel.show_specialties%> (<%=@laurel.specialty_detail%>)<br/>
<% unless @laurel.group.nil? %>
  <strong>Group:</strong> <%=laurel_link @laurel.group %> <br>
<% end %>
<strong>Contact Info</strong><br>
<address>
  <%=@laurel.street%><br>
  <%=@laurel.city%>, <%=@laurel.state%> <%=@laurel.zipcode%><br>
  Phone: <%=@laurel.phone%>
</address>
<strong>Elevated by:</strong> <%=@laurel.elevators%><br>
<strong>Elevation Date:</strong> <%=@laurel.elevation_date%>
<div style="margin-top:10px">
<%= markdown(@laurel.bio) %>
</div>
