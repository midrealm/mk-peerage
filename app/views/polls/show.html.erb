<h1>Poll</h1>
<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="<%=@percent_complete%>" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%=@percent_complete%>%;">
<%=@percent_complete%>%
  </div>
</div>
<div style="text-align:center"><h4><%=current_user.poll_submitted_count%>/<%=@candidates.count%> Submitted</h4></div>

<table class='table'>
<thead>
<th>Candidate</th><th>List</th><th>Status</th>
</thead>
<tbody>
<% @candidates.order(:sca_name).each do |cand| %>
  <% if cand.poll_entry_submitted?(current_user) %>
  <tr class="alert alert-success">
  <% else %>
    <tr >
  <%end%>
    <td><%= link_to cand.sca_name, poll_edit_candidate_path(cand.id) %></td>
    <td><%= cand.vote ? 'Vote List' : 'Watch List' %></td>
  <% if cand.poll_entry_submitted?(current_user)%>
    <td><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></td>
  <% else %>
    <td><span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span></td>
  <% end %>
</tr>
<% end %>
</tbody>
</table>
