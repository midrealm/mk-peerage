<h2>Change your password</h2>
<div class="col-md-5">

<%= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.inputs do %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "New password", class: 'control-label' %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %>
  </div>

  <%= f.input :password_confirmation, label: 'Confirm new password' %>
  <%end %>

    <%= f.action :submit, :as => :button, button_html: { class: 'btn btn-default' }, label: 'Change My Password'%>
<% end %>
</div>
