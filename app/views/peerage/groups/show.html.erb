<h1><%=@group%></h1>
<ul>
<%= render '/peerage/groups/draw_tree', node: @group %>
</ul>
<h3><%=@peerage.capitalize%>s</h3>
<table class="table">
<thead>
<th>Name</th><th>Specialty</th><th>Group</th>
</thead>
<tbody>

<% @group.all_peers(@peerage).each do |user|%>
  <tr>
  <td><%= link_to user.sca_name, user.url %></td>
  <td><%=user.peer.show_specialties%></td>
  <td><%=link_to user.group, controller.send("#{@peerage}_group_path",[user.group.slug]) %></td>
  </tr>
<% end %>
</tbody>
</table>
<script>
$(document).ready( function () {
    var table = $('.table').DataTable(
      {
        "pageLength": 25, 
        "saveState": true,
      });
});
</script>
