<% poll = Poll.current(peerage) %>
<%= link_to 'View Your Profile', peer_path(peerage, current_user.slug) %><br>
<%= link_to 'Edit Your Profile', users_edit_path( peerage: peerage ) %><br>
<%= link_to 'View Candidates', chambers_candidates_path(peerage) %><br>
<%= link_to 'Browse Candidates By Group', chambers_groups_path(peerage) %><br/>
<% if poll.present? && can?(:take_poll, peerage) %>
  <% ballot = Ballot.new(current_user.peer(peerage)) %>
  <% unless ballot.complete? %>
    <%= link_to 'Take Poll', controller.send("chambers_#{peerage}_poll_candidates_path") %> | <%="#{ballot.submission_count}/#{ballot.candidates.count}"%> Submitted |
  <% else  %>
    <%= link_to 'Edit Poll', controller.send("chambers_#{peerage}_poll_candidates_path") %> Finished! | 
  <%end %>
  Open Until Midnight on: <%= poll.end_date.strftime('%d-%b-%Y') %> <br/>
<% end %>
