<h3>Admin Tasks</h3>
<% poll = Poll.last_for(peerage) %>
<%= link_to 'Manage Candidates', chambers_admin_candidates_path(peerage) %><br>
<%= link_to 'Manage Laurels', controller.send("chambers_#{peerage}_admin_#{peerage}s_path") %><br>
<%= link_to 'Manage Royalty', admin_royalty_index_path %><br>
<% unless poll.nil? %>
  <% if poll.end_date.past? %>
    <%= link_to 'Create New Poll', controller.send("new_chambers_#{peerage}_admin_poll_path") %>
  <% else  %>
    <%= link_to 'Edit Poll', controller.send("edit_chambers_#{peerage}_admin_poll_path") %> | <%= poll.start_date.strftime('%d-%b-%Y') %> 12:01 AM - <%= poll.end_date.strftime('%d-%b-%Y') %> 11:59 PM
  <% end %>
<% else %>
  <%= link_to 'Create New Poll', controller.send("new_chambers_#{peerage}_admin_poll_path") %>
<% end %></br>
