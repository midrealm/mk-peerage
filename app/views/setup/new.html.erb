<% title "Set Up Your Peerage Account"%>
<div class="row justify-content-center">
  <div class="col-md-6">
    <h1>Set Up Your Peerage Account</h1>
    <%= bootstrap_form_tag url: '/users/set_up_account' do |f| %>
      <%= f.text_field :sca_name, label: 'SCA Name' %>
      <%= f.email_field :email %>
      <%= f.submit "Send Password Reset Instructions" %>
    <% end %>
	</div>
</div>
