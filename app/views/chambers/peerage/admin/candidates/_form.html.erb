<div class="container">
  <div class="row">
    <div class="col-md">
      <%= bootstrap_form_for(@candidate, url: {action: action, controller: 'candidates', peerage: peerage} ) do |f| %>
        <%= f.hidden_field :peerage_type %>
        <%= f.text_field :sca_name, label: 'SCA Name' %>
        <% if @candidate.persisted? %>
          <%= f.form_group :vote, label: {text: "List Status"} do %>
            <%= f.radio_button :vote, true, label: "Vote" %>
            <%= f.radio_button :vote, false, label: "Watch" %>
          <% end %> 
        <% end %>
        <%= f.select :group_id, Hash[Group.after_depth(0).map{|g| ["#{g.group_type.name} of #{g.name}",g.id]}], {label: 'Group', include_blank: true}%>
        <%= f.select :specialty_ids, Specialty.where(peerage_type: peerage).pluck(:name, :id), {label: 'Specialties', include_blank: true}, multiple: true%>
        <%= f.text_field :specialty_detail %>
        <%= f.select :peer_ids, Peer.where(type: peerage.capitalize).joins(:user).pluck(:sca_name, :id), {label: 'Advocates', include_blank: true}, multiple: true %>
        <div class="form-group">
          <div id='candidate_profile_pic_input' class="custom-file">
            <input type="file" class="custom-file-input" id="profile_pic" name="not_included">
            <label class="custom-file-label" for="profile_pic">Choose Profile Pic</label>
          </div>
        </div>
        <input type="hidden" id="candidate_profile_pic" name="candidate[profile_pic]" value=''>
      <%= f.submit class: 'btn btn-secondary', id: 'submit'%>
      <% end %>
    </div>
    <div class="d-flex flex-column col-md">
      <div id="profile-preview">
        <% unless @candidate.profile_pic_file_size.nil? %>
          <%= image_tag @candidate.profile_pic.url(:large) %>
        <% end %>
      </div>
      <div class="ml-5">
        <button class="btn btn-default d-none " id="crop">Finish</button>
      <div> 
    </div>
  </div>
</div>
