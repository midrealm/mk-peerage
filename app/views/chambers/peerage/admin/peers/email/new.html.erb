<% title "Reset Peer Email and Send Reset Password Email"%>
<div class="row justify-content-center">
  <div class="col-md-6">
<h1>Reset Peer Email and Send Reset Password Email</h2>

<%= bootstrap_form_tag url: chambers_admin_peers_email_path do |f| %>
  <%= f.select :id, @peers, {label: 'Peers'}, {class: 'selectpicker', data: {'live-search' => true}} %>
  <%= f.text_field :email %>
  <%= f.submit "Send Reset Password Info to new Email Address" %>
<% end %>
</div>
</div>
