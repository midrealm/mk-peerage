<% title "Update Peer Email and Send Reset Password Email"%>
  <div class="row justify-content-center">
    <div class="col-md-6 <%=peerage%>-border-left">
      <h1>Update Peer Email for:<br> <%=@user.sca_name%></h2>
  <%= bootstrap_form_tag url: chambers_admin_peers_email_path do |f| %>
    <%= f.hidden_field :id, value: @user.id %>
    <%= f.text_field :email, value: @user.email %>
    <%= f.submit "Send Reset Password Info to new Email Address" %>
  <% end %>
  </div>
  </div>
