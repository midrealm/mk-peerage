<h1>Candidates</h1>
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="pills-vote-tab" data-toggle="pill" href="#pills-vote" role="tab" aria-controls="pills-vote" aria-selected="true">Vote List</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-watch-tab" data-toggle="pill" href="#pills-watch" role="tab" aria-controls="pills-watch" aria-selected="false">Watch List</a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane show active" id="pills-vote" role="tabpanel" aria-labelledby="pills-vote-tab">
    <%= render 'chambers/peerage/candidates/table', candidates: @candidates.where(vote: true)%>
  </div>
  <div class="tab-pane" id="pills-watch" role="tabpanel" aria-labelledby="pills-watch-tab">
    <%= render 'chambers/peerage/candidates/table', candidates: @candidates.where(vote: false)%>
  </div>
</div>


<%= render '/shared/default_datatable' %>
