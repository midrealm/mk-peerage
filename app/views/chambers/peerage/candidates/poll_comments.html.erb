<% title "Full Poll Results"%>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'Private Chambers', '/chambers' %></li>
    <li class="breadcrumb-item"><%= link_to "#{peerage.capitalize} Candidates", chambers_candidates_path(peerage) %></li>
    <li class="breadcrumb-item active" aria-current="page">Full Poll Results for <%=@candidate.sca_name%></li>
  </ol>
</nav>
<div class ="d-md-flex flex-row-reverse">
  <div class="ml-3 mb-3">
    <%= image_tag @candidate.profile_pic_full %>
  </div>
  <div class="col-md">
    <%= render "profile", candidate: @candidate %>
  
  <h3>Counsel from the Order</h3>
  <table class="table" data-behavior="dtable-shave">
    <thead>
      <th>Peer</th>
      <th>Judgment</th>
      <th>Comment</th>
    </thead>
    <tbody>
    <% @candidate.advisings.each do |adv| %>
      <tr> 
        <td style="width:140px;text-align:center">
          <%= link_to (image_tag adv.peer.profile_pic_thumb), peer_path(peerage,adv.peer.slug) %><br>
          <%= link_to "#{adv.peer.sca_name} #{adv.peer.specialties_suffix}", peer_path(peerage,adv.peer.slug)%> 
        </td>
        <td>
          <%= adv.judgement_name %> 
        </td> 
        <td data-behavior="shave">
          <div class="short d-none"> <%= markdown(adv.shortened_comment) %></div>
          <div class="long"><%=markdown(adv.comment)%>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
