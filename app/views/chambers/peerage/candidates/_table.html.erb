<table class="table">
<thead>
<th>Name</th>
<% if can?(:read, PollResult) %>
<th>Comments from Last Poll</th>
<% end %>
  <th class="d-none d-md-table-cell">Elevate now</th>
  <th class="d-none d-md-table-cell">Wait</th>
  <th class="d-none d-md-table-cell">No Strong Opinion</th>
  <th class="d-none d-md-table-cell">Drop</th>
  <th class="d-none d-md-table-cell">Rec%</th>
  <th class="d-none d-md-table-cell">Fav%</th>
  <th>Region</th>
  <th>Advocate(s)</th>
</thead>
<tbody>
  <% candidates.each do |cand| %>
    <% pr = cand.poll_results.last %>
    <% pr = PollResult.new if pr.nil? %>
    <tr>
      <td style="width:140px;text-align:center">
        <%= link_to (image_tag cand.profile_pic.url(:thumb)), chambers_candidate_path(peerage,cand.id) %><br>
        <%= link_to "#{cand.sca_name} (#{cand.specialties.to_sentence})", chambers_candidate_path(peerage,cand.id)%>
      </td>
      <% if can?(:read, PollResult) %>
          <td>
            <% if pr.id.present? %><%= link_to 'Comments', chambers_poll_comments_path(peerage,cand.id)%><%end%>
          </td>
      <% end %>
      <td class="d-none d-md-table-cell"><%=pr.elevate%></td>
      <td class="d-none d-md-table-cell"><%=pr.wait%></td>
      <td class="d-none d-md-table-cell"><%=pr.no_strong_opinion%></td>
      <td class="d-none d-md-table-cell"><%=pr.drop%></td>
      <td class="d-none d-md-table-cell"><%=pr.rec%></td>
      <td class="d-none d-md-table-cell"><%=pr.fav%></td>
      <td> <% if cand.group.present? %> <%= candidate_region_link(cand.group,peerage) %> <% end %> </td>
      <td> <%= cand.advocates_link %> </td>
   </tr> 
  <% end%>
</tbody>
</table>
