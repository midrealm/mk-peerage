<table class="table">
<thead>
<th>Name</th>
<% if can?(:read, PollResult) %>
<th>Comments from Last Poll</th>
<% end %>
  <th>Elevate now</th>
  <th>Wait</th>
  <th>No Strong Opinion</th>
  <th>Drop</th>
  <th>Rec%</th>
  <th>Fav%</th>
  <th>Region</th>
  <th>Advocate(s)</th>
</thead>
<tbody>
  <% candidates.each do |cand| %>
    <% pr = cand.poll_results.last %>
    <tr>
      <td>
        <%= image_tag cand.profile_pic.url(:thumb), class: 'float-left' %>
        <%= link_to "#{cand.sca_name} (#{cand.specialties.to_sentence})", chambers_candidate_path(peerage,cand.id)%>
      </td>
      <% unless pr.nil? %>
        <% if can?(:read, PollResult) %>
            <td><%= link_to 'Comments', chambers_poll_comments_path(peerage,cand.id)%></td>
        <% end %>
          <td><%=pr.elevate%></td>
          <td><%=pr.wait%></td>
          <td><%=pr.no_strong_opinion%></td>
          <td><%=pr.drop%></td>
          <td><%=pr.rec%></td>
          <td><%=pr.fav%></td>
      <%else%>
        <% if can?(:read, PollResult) %>
            <td></td>
        <% end %>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      <%end%>
      <td> <% if cand.group.present? %> <%= candidate_region_link(cand.group,peerage) %> <% end %> </td>
      <td> <%= cand.peers.map{ |p|  link_to p.sca_name, peer_path(peerage, p.slug) }.join(', ').html_safe %> </td>
   </tr> 
  <% end%>
</tbody>
</table>
