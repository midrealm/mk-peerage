
<div class="<%= candidate.show_box_class%>">
  <h1><%=candidate.sca_name%><br/><small class="text-muted"><%=candidate.specialties%></small></h1>
   <h4 class="<%=candidate.show_status_class%>"><%=peerage.capitalize%> <%= candidate.status %></h4>
   <% if candidate.advocates? %>
     <strong>Advocates</strong>: <%= candidate.advocates %><br/>
   <%end%>
   <% if candidate.group %>
     <strong>Group</strong>: <%= candidate_link(candidate.group, peerage) %><br>
   <% end %>
 </div>
 <div>
     <i>Poll results from <%=candidate.poll_date %></i></br>
     <table class="table d-none d-md-table">
       <thead>
         <th>Elevate</th>
         <th>Wait</th>
         <th>Drop</th>
         <th>No Strong Opinion</th>
         <th>No Counsel</th>
         <th title="(E+D+W)/(Total Respondents)">Rec%</th>
         <th title="(E-D)/(Total Respondents)">Fav%</th>
       </thead>
       <tbody>
       <tr>
         <td><%=candidate.elevate%></td>
         <td><%=candidate.wait%></td>
         <td><%=candidate.drop%></td>
         <td><%=candidate.no_strong_opinion%></td>
         <td><%=candidate.no_response%></td>
         <td><%=candidate.rec%></td>
         <td><%=candidate.fav%></td>
       </tr>
       </tbody>
     </table>

     <table class="table d-md-none">
       <thead class="d-md-none">
         <th>E</th>
         <th>W</th>
         <th>D</th>
         <th>NSO</th>
         <th>NC</th>
         <th title="(E+D+W)/(Total Respondents)">Rec%</th>
         <th title="(E-D)/(Total Respondents)">Fav%</th>
       </thead>
       <tbody>
       <tr>
         <td><%=candidate.elevate%></td>
         <td><%=candidate.wait%></td>
         <td><%=candidate.drop%></td>
         <td><%=candidate.no_strong_opinion%></td>
         <td><%=candidate.no_response%></td>
         <td><%=candidate.rec%></td>
         <td><%=candidate.fav%></td>
       </tr>
       </tbody>
     </table>
 </div>
