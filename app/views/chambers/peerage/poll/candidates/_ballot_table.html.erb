<table class='table'>
<thead>
<th>Candidate</th>
  <% if Peer.subclass(peerage).specialties_on? %>
    <th>Specialties</th>
  <%end %>
<th>Status</th>
</thead>
<tbody>
<% candidates.each do |cand| %>
  <% if ballot.submission_for?(cand.id) %>
  <tr class="alert alert-success">
  <% else %>
    <tr >
  <%end%>
    <td><%= link_to cand.sca_name, chambers_edit_ballot_candidate_path(peerage,cand.id)%></td>
  <% if Peer.subclass(peerage).specialties_on? %>
    <td><%= cand.specialties_sentence %></td>
  <% end %>
  <% if ballot.submission_for?(cand.id)%>
    <td><i class="fas fa-check"></i></td>
  <% else %>
    <td><i class="far fa-square"></i></td>
  <% end %>
</tr>
<% end %>
</tbody>
</table>
