<% node.children.each do |child|  %>
  <% cand_total = child.all_candidates.count %>
  <% if cand_total > 0 %>
    <li><%= link_to child.titled_name, candidate_group_url(child.name) %> (<%=cand_total%>)
    <% if child.children.any?  %>
      <ul><%= render 'draw_tree', node: child  %></ul>
    <% end  %>
   </li>
  <% end %>
<% end %>
