<h1>Edit Poll</h1>
<div class="container">
  <div class="col-md-4">
    <%= semantic_form_for @poll, url: admin_poll_path(@poll) do |f| %>
      <%= f.inputs do %>
        <% if @poll.start_date > DateTime.now %>
          <%= f.input  :start_date, as: :string, input_html: { value: @poll.start_date.strftime('%d-%b-%Y') } %>
        <% end %>
        <%= f.input  :end_date, as: :string, input_html: { value: @poll.start_date.strftime('%d-%b-%Y') } %>
      <% end %>
      <%= f.action :submit, as: :button, button_html: {class: 'btn btn-default'}, id: 'submit'%>
    <% end %>
  </div>
</div>
